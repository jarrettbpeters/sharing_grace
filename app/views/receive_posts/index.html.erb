<p id="notice"><%= notice %></p>

<h1>Listing Receive Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Location</th>
      <th>Description</th>
      <th>Condition</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receive_posts.each do |receive_post| %>
      <tr>
        <td><%= receive_post.title %></td>
        <td><%= receive_post.category %></td>
        <td><%= receive_post.location %></td>
        <td><%= receive_post.description %></td>
        <td><%= receive_post.condition %></td>
        <td><%= receive_post.user_id %></td>
        <td><%= link_to 'Show', receive_post %></td>
        <td><%= link_to 'Edit', edit_receive_post_path(receive_post) %></td>
        <td><%= link_to 'Destroy', receive_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receive post', new_receive_post_path %>
